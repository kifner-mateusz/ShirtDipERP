{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "notes": {
      "type": "string"
    },
    "price": {
      "type": "decimal",
      "min": 0
    },
    "isPricePaid": {
      "type": "boolean",
      "default": false
    },
    "advance": {
      "type": "decimal",
      "min": 0
    },
    "isAdvancePaid": {
      "type": "boolean",
      "default": false
    },
    "dateOfCompletion": {
      "type": "date"
    },
    "secretNotes": {
      "type": "text"
    },
    "files": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "address": {
      "type": "component",
      "repeatable": false,
      "component": "types.address"
    },
    "products": {
      "type": "component",
      "repeatable": true,
      "component": "types.product"
    },
    "client": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::client.client",
      "inversedBy": "orders"
    },
    "employees": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    }
  }
}
