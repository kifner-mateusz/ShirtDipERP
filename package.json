{
  "name": "shirterp",
  "version": "1.3.0",
  "description": "ShirtERP system",
  "author": "Mateusz Kifner",
  "license": "UNLICENSED",
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:push": "pnpm -F db push",
    "db:studio": "pnpm -F db studio",
    "dev": "turbo dev --parallel",
    "format:mock": "turbo format --continue --",
    "format": "turbo format --continue -- --write",
    "lint": "turbo lint --continue --",
    "lint:fix": "turbo lint --continue -- --apply",
    "lint:fix-unsafe": "turbo lint --continue -- --apply-unsafe",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo typecheck",
    "ui-next-add": "pnpm -F ui ui-add",
    "ui-expo-add": "pnpm -F expo ui-add",
    "db:gen-erd": "pnpm -F db-erd-gen generate"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@turbo/gen": "2.1.2",
    "cross-env": "7.0.3",
    "turbo": "2.1.2",
    "typescript": "5.6.2"
  },
  "private": true,
  "engines": {
    "node": ">=20.12.0"
  },
  "packageManager": "pnpm@9.11.0"
}